<style>
	@import url('https://fonts.googleapis.com/css2?family=Montserrat:ital@0;1&family=Roboto:wght@300;400;500;700&display=swap');

	.columns {
		display: flex;
		align-items: stretch;
		justify-content: space-evenly;
		height: 100%;
		width: 100%;
		gap: 45px;
	}
	.columns figure {
		display: flex;
		flex-direction: column;
		align-items: center;
		margin: 0;
	}
	.columns img {
		flex: 1;
		display: block;
		width: max-content;
		height: 100%;
	}
	.modelo-caja {
		flex: 1;
		text-align: left;
		padding: 2rem;
	}
	.modelo-caja p {
		border: 1px solid rgba(255,0,0,.75);
	}
	.modelo-caja strong {
		border: 1px solid rgba(0,255,0,.75);
	}

	.mayus {
		text-transform: uppercase;
	}

	.text-box {
		font-family: "Roboto", sans-serif;
		font-optical-sizing: auto;
		font-weight: 400;
		font-style: normal;
		border: 1px solid #efffde;
		border-radius: 32px;
		padding: 60px 100px;
		max-width: 1200px;
		color: white;
		line-height: 1.5;
		will-change: transform;
	}
	.text-box .text-box__subheading {
		font-size: 22px;
	}
	.text-box .text-box__heading {
		font-size: 42px;
		font-weight: 700;
	}
	.text-box .text-box__paragraph {
		font-size: 16px;
		margin: 20px 0;
		line-height: 1.2;
	}
	.text-box .text-box__cta {
		font-size: 18px;
		display: inline-block;
		border-radius: 32px;
		color: black;
		background-color: white;
		padding: 8px 32px;
		text-decoration: none;
		font-weight: 500;
	}

	.text-box--phase-02 .text-box__heading {
		line-height: 1.2;
		animation: line-height-1 500ms ease-in-out;
	}
	.text-box--phase-02 .text-box__paragraph {
		line-height: 1.5;
		animation: line-height-2 1200ms ease-in-out;
	}
	@keyframes line-height-1 {
		from { line-height: 1.5; }
		to { line-height: 1.2; }
	}
	@keyframes line-height-2 {
		0%,50% { line-height: 1.2; }
		to { line-height: 1.5; }
	}

	.text-box--phase-03 .text-box__heading {
		line-height: 1.2;
		letter-spacing: -0.01em;
		animation: letter-spacing-1 800ms ease-in-out;
	}
	.text-box--phase-03 .text-box__paragraph {
		line-height: 1.5;
	}
	@keyframes letter-spacing-1 {
		0%, 20% { letter-spacing: 0; }
		to { letter-spacing: -0.01em; }
	}

	.text-box--phase-04 .text-box__heading {
		line-height: 1.2;
		letter-spacing: -0.01em;
		animation: text-align-1 2000ms ease-in-out;
	}
	.text-box--phase-04 .text-box__paragraph {
		line-height: 1.5;
		animation: text-align-1 2000ms ease-in-out reverse;
		animation-delay: 2000ms;
	}
	@keyframes text-align-1 {
		0% { text-align: center; }
		20% { color: white; }
		30%, 70% { text-align: left; color: red; }
		80% { color: white; }
		to { text-align: center; }
	}

	.text-box--phase-05 .text-box__heading {
		line-height: 1.2;
		letter-spacing: -0.01em;
		text-wrap: balance;
	}
	.text-box--phase-05 .text-box__paragraph {
		line-height: 1.5;
	}

	.text-box--phase-06 .text-box__heading {
		line-height: 1.2;
		letter-spacing: -0.01em;
		text-wrap: balance;
	}
	.text-box--phase-06 .text-box__paragraph {
		line-height: 1.5;
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
		animation: width-1 800ms ease-in-out;
	}
	@keyframes width-1 {
		0%, 20% { max-width: 100%; }
		to { max-width: 600px; }
	}

	.text-box--phase-07 .text-box__subheading {
		font-size: 18px;
		font-weight: 500;
		animation: hierarchy-1 4000ms ease-in-out;
	}
	.text-box--phase-07 .text-box__heading {
		line-height: 1.2;
		letter-spacing: -0.01em;
		text-wrap: balance;
	}
	.text-box--phase-07 .text-box__paragraph {
		line-height: 1.5;
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
		font-size: 18px;
		font-weight: 300;
		animation: hierarchy-2 4000ms ease-in-out;
	}
	@keyframes hierarchy-1 {
		0%, 10% { font-size: 20px; font-weight: 400; }
		30% { font-size: 18px; font-weight: 400; }
		70% { font-size: 18px; font-weight: 400; }
		80% { font-size: 18px; font-weight: 400; }
		to { font-size: 18px; font-weight: 500; }
	}
	@keyframes hierarchy-2 {
		0%, 30% { font-size: 16px;  font-weight: 400; }
		70% { font-size: 18px; font-weight: 400; }
		90% { font-size: 18px; font-weight: 400; }
		to { font-size: 18px; font-weight: 300; }
	}

	.text-box--phase-08 .text-box__subheading {
		font-size: 18px;
		font-weight: 500;
		margin: 26px 0;
		animation: margin-1 1000ms ease-in-out;
	}
	.text-box--phase-08 .text-box__heading {
		line-height: 1.2;
		letter-spacing: -0.01em;
		text-wrap: balance;
		margin: 26px 0;
		animation: margin-2 1100ms ease-in-out;
	}
	.text-box--phase-08 .text-box__paragraph {
		line-height: 1.5;
		max-width: 600px;
		font-size: 18px;
		font-weight: 300;
		margin: 26px auto;
		animation: margin-3 1200ms ease-in-out;
	}
	.text-box--phase-08 .text-box__cta {
		margin-top: 52px;
		animation: margin-4 3000ms ease-in-out;
	}
	@keyframes margin-1 {
		0%,15% { margin-top: 4.5px; margin-bottom: 4.5px; }
		to { margin-top: 26px; margin-bottom: 26px; }
	}
	@keyframes margin-2 {
		0%,20% { margin-top: 42px; margin-bottom: 42px; }
		to { margin-top: 26px; margin-bottom: 26px; }
	}
	@keyframes margin-3 {
		0%,25% { margin-top: 20px; margin-bottom: 20px; }
		to { margin-top: 26px; margin-bottom: 26px; }
	}
	@keyframes margin-4 {
		0%,50% { margin: 0 auto; }
		to { margin: 52px auto 0; }
	}

	.text-box--phase-09 .text-box__subheading {
		font-size: 18px;
		font-weight: 500;
		margin: 26px 0;
	}
	.text-box--phase-09 .text-box__heading {
		/* font-size: 42px; */
		line-height: 1.2;
		letter-spacing: -0.01em;
		margin: 26px 0;
		text-wrap: balance;
	}
	.text-box--phase-09 .text-box__paragraph {
		font-size: 18px;
		font-weight: 300;
		line-height: 1.5;
		margin: 26px auto;
		max-width: 600px;
	}
	.text-box--phase-09 .text-box__cta {
		margin-top: 52px;
	}
</style>
