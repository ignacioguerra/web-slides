						<SampleCodeTab /><span style="color: rgb(121, 192, 255); font-weight: 400;">left</span>: <span style="color: rgb(121, 192, 255); font-weight: 400;">60px</span>;
						</SampleCodeBrackets>
						<span style="color: rgb(121, 192, 255); font-weight: 400;">.squirtle</span> <SampleCodeBrackets>
						<SampleCodeTab /><span style="color: rgb(121, 192, 255); font-weight: 400;">position</span>: absolute;
						<SampleCodeTab /><span style="color: rgb(121, 192, 255); font-weight: 400;">top</span>: <span style="color: rgb(121, 192, 255); font-weight: 400;">120px</span>;
						<SampleCodeTab /><span style="color: rgb(121, 192, 255); font-weight: 400;">left</span>: <span style="color: rgb(121, 192, 255); font-weight: 400;">10px</span>;
						</SampleCodeBrackets>
						<span style="color: rgb(121, 192, 255); font-weight: 400;">.charmander</span> <SampleCodeBrackets>
						<SampleCodeTab /><span style="color: rgb(121, 192, 255); font-weight: 400;">position</span>: fixed;
						<SampleCodeTab /><span style="color: rgb(121, 192, 255); font-weight: 400;">bottom</span>: <span style="color: rgb(121, 192, 255); font-weight: 400;">60px</span>;
						<SampleCodeTab /><span style="color: rgb(121, 192, 255); font-weight: 400;">right</span>: <span style="color: rgb(121, 192, 255); font-weight: 400;">60px</span>;
