---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="generator" content={Astro.generator} />
  <title>{ title }</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="stylesheet" href="assets/css/styles.css">
</head>
<body>
  <slot />
</body>
</html>
<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Red+Hat+Mono:wght@400;600;700&display=swap');
  html, body {
    height: 100%;
    margin: 0;
  }
  body {
    font: 400 100%/1.5 'Red Hat Mono', monospace;
    background-color: #011219;
    color: #efffde;
  }
  * {
    box-sizing: border-box;
    /* user-select: none; */
  }
</style>